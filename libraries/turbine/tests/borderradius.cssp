@turbine
	compress:0
	plugins:css3

html,body
	height: 100%
	margin: 0
	padding: 0
	background-image: linear-gradient(top,#000,#FFF);

body
	padding: 100px 0 0 0

div, input, textarea
	width: 400px
	height: 100px
	overflow: visible
	font-size:2em
	background:cyan
	// transform: rotate(5deg) // Prevents rounded corners from working in IE
	margin, padding:32px
	border:8px solid rgb(255,0,0)
	// box-shadow: 2px 2px 4px #CCC // Prevents rounded corners from working in IE
	float:left

.borderradius1, input, textarea
	border-radius:32px

.borderradius2
	border-top-radius:32px

.borderradius3
	border-left-radius:32px

.borderradius4
	border-top-left-radius:32px
